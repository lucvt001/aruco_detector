<launch>
    <node name="aruco_detector_node" pkg="aruco_detector" exec="aruco_detector" output="screen">
        <param name="input_image_topic" value="/sensor/camera" />
        <param name="output_image_topic" value="/aruco/annotated_frames" />
        <param name="landing_pad_position_topic" value="/aruco/landing_pad_position" />
        <param name="is_display" value="false" />
        <param name="camera_parameters_yaml" value="$(find-pkg-share aruco_detector)/yaml/iphone_calibration.yaml" />
        <param name="marker_info_yaml" value="$(find-pkg-share aruco_detector)/yaml/landing_pad_final.yaml" />
    </node>
</launch>